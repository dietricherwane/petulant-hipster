<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Liste transactions</h5>
            <span>Nombre de transactions: <b><%= @transactions_count %></b></span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "transactions/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des transactions</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="sTable taskWidget" width = "100%">

      <%= render "transactions/shared/transactions_list", transactions: @transactions %>

      <tfoot>
        <tr>
          <td colspan="8">
            <div class="tPagination">
              <%= paginate @transactions, :params => {:controller => :transactions, :action => :list} %>
            </div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
